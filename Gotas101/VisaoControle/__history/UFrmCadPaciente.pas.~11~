unit UFrmCadPaciente;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, UFrmCRUD, Menus, Buttons, StdCtrls, ExtCtrls
  , UCadPessoa
  , UUtilitarios
  , URegraCRUDCadPessoa, Mask
  ;


type
  TfrmCadPaciente = class(TFrmCRUD)
    gbCadastro: TGroupBox;
    edCodSus: TLabeledEdit;
    edNome: TLabeledEdit;
    edNascimento: TLabeledEdit;
    edEndereco: TLabeledEdit;
    edRG: TLabeledEdit;
    edEstado: TLabeledEdit;
    edFixo: TLabeledEdit;
    edCel: TLabeledEdit;
    edCidade: TLabeledEdit;
    edPai: TLabeledEdit;
    edMae: TLabeledEdit;
    edSexo: TComboBox;
    Label1: TLabel;
    edCPF: TMaskEdit;
    Label2: TLabel;
protected
    FCADPESSOA: TCADPESSOA;

    FregraCRUDCADPESSOA: TRegraCRUDCADPESSOA;

    procedure Inicializa; override;
    procedure PreencheEntidade; override;
    procedure PreencheFormulario; override;
    procedure PosicionaCursorPrimeiroCampo; override;
    procedure HabilitaCampos(const ceTipoOperacaoUsuario: TTipoOperacaoUsuario); override;
  end;

var
  frmCadPaciente: TfrmCadPaciente;

implementation
 uses
    UOpcaoPesquisa
  , UEntidade
  , UFrmPesquisa
  , UDialogo;
{$R *.dfm}

{ TfrmCadPaciente }

procedure TfrmCadPaciente.HabilitaCampos(
  const ceTipoOperacaoUsuario: TTipoOperacaoUsuario);
begin
  inherited;
  gbCadastro.Enabled := FTipoOperacaoUsuario In [touInsercao, touAtualizacao];
end;

procedure TfrmCadPaciente.Inicializa;
begin
  inherited;
  DefineEntidade(@FCADPESSOA, TCADPESSOA);
  DefineRegraCRUD(@FregraCRUDCADPESSOA, TRegraCRUDCADPESSOA);

    AdicionaOpcaoPesquisa(TOpcaoPesquisa
    .Create
    .AdicionaFiltro(FLD_PESSOA_CODIGO)
    .AdicionaFiltro(FLD_PESSOA_NOME)
    .DefineNomeCampoRetorno(FLD_ENTIDADE_ID)
    .DefineNomePesquisa(STR_CADPESSOA)
    .DefineVisao(TBL_CAD_PESSOA));

end;

procedure TfrmCadPaciente.PosicionaCursorPrimeiroCampo;
begin
  inherited;
  edCodSus.SetFocus;
end;

procedure TfrmCadPaciente.PreencheEntidade;
begin
  inherited;
    FCADPESSOA.PESSOA_CODIGO       := edCodSus.Text  ;
    FCADPESSOA.PESSOA_NOME         := edNome.Text ;
    FCADPESSOA.PESSOA_NASCIMENTO   := StrToInt(edNascimento.Text)  ;
    FCADPESSOA.PESSOA_SEXO         := edSexo.Text  ;
    FCADPESSOA.PESSOA_ENDERECO     := edEndereco.Text  ;
    FCADPESSOA.PESSOA_RG           := StrToInt(edRG.Text)  ;
    FCADPESSOA.PESSOA_CPF          := edCPF.Text  ;
    FCADPESSOA.PESSOA_ESTADO       := edEstado.Text ;
    FCADPESSOA.PESSOA_TEL_FIXO     := StrToInt(edFixo.Text) ;
    FCADPESSOA.PESSOA_CELULAR      := StrToInt(edCel.Text) ;
    FCADPESSOA.PESSOA_CIDADE       := edCidade.Text ;
    FCADPESSOA.PESSOA_PAI          := edPai.Text ;
    FCADPESSOA.PESSOA_MAE          := edMae.Text ;
end;

procedure TfrmCadPaciente.PreencheFormulario;
begin
  inherited;
    edCodSus.Text     := FCADPESSOA.PESSOA_CODIGO;
    edNome.Text       := FCADPESSOA.PESSOA_NOME;
    edNascimento.Text := IntToStr(FCADPESSOA.PESSOA_NASCIMENTO);
    edSexo.Text       := FCADPESSOA.PESSOA_SEXO;
    edEndereco.Text   := FCADPESSOA.PESSOA_ENDERECO;
    edRG.Text         := IntToStr(FCADPESSOA.PESSOA_RG);
    edCPF.Text        := FCADPESSOA.PESSOA_CPF;
    edEstado.Text     := FCADPESSOA.PESSOA_ESTADO;
    edFixo.Text       := IntToStr(FCADPESSOA.PESSOA_TEL_FIXO);
    edCel.Text        := IntToStr(FCADPESSOA.PESSOA_CELULAR);
    edCidade.Text     := FCADPESSOA.PESSOA_CIDADE;
    edPai.Text        := FCADPESSOA.PESSOA_PAI;
    edMae.Text        := FCADPESSOA.PESSOA_MAE;
end;

end.
